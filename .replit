language = "python3"
run = "while [ true ]; rm -f .git/index.lock; do npx nodemon -L -x 'git pull origin main --force; git reset --hard; git reset --hard origin/main; killall python; pip install --force-reinstall -r requirements.txt; python app.pycsleep 1; echo $(date +'%Y/%d/%m_%H:%M:%S') >> restart.log' --watch restart.log || npm install nodemon; continue; done"